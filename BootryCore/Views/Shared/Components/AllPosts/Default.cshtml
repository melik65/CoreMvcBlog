@using EntityLayer.Concrete;
@model IEnumerable<Post>

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.25/css/jquery.dataTables.min.css">

<div class="card-body table-responsive p-0" style="height: 300px;">
    <table class="table table-head-fixed text-nowrap">
        <thead>
            <tr>
                <th>ID</th>
                <th>başlık</th>
                <th>tarih</th>
                <th>okunma sayısı</th>
                <th>kategori</th>
                <th>yazar</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var post in Model)
            {
                <tr>
                    <td>@post.PostId</td>
                    <td>
                        @{
                            if (post.PostTitle.Length >= 50)
                            {
                                @post.PostTitle.Substring(0, 49);<span>...</span>
                            }
                            else
                            {
                                @post.PostTitle
                            }
                        }
                    </td>
                    <td>@post.PostCreatedTime</td>
                    <td>@post.PostView</td>
                    <td>@post.Category.CategoryName</td>
                    <td>@post.Writer.WriterFirstName @post.Writer.WriterLastName</td>
                    <td>
                        <a href="/admin/updatepost/@post.PostId" class="btn btn-success text-white">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a href="/admin/cope-at/@post.PostId" class="btn btn-warning text-white">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>