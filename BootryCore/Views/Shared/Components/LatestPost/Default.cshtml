@model EntityLayer.Concrete.Post

<div class="col-12 mb-5">
    <div class="line">
        <div>last post</div>
    </div>
    <div class="card">
        <img src="/Materials/images/news/@Model.PostImage" class="card-img-top" alt="@Model.PostTitle">
        <div class="card-body">
            <h5 class="card-title">
                <span class="badge badge-primary category">
                    <a href="/@Model.Category.CategoryName/@Model.PostSeoTitle" class="text-light">@Model.Category.CategoryName</a>
                </span> @Model.PostTitle
            </h5>

            <p class="card-text">@Model.PostSummary</p>
            <a href="/@Model.Category.CategoryName/@Model.PostSeoTitle/@Model.PostId" class="btn btn-primary float-left">
                Oku
                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-right" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z" />
                </svg>
            </a>
        </div>
    </div>
</div>