@using EntityLayer.Concrete;
@model IEnumerable<Post>
<section class="bestoftheweek">
    <div class="container">
        <div class="row mt-4">
            <div class="col-6">
                <h5 class="title">Haftanın en iyileri</h5>
                <div class="title-border"></div>
            </div>
            <div class="col-6 text-right">
                <div class="carousel-nav mr-3" id="best-of-the-week-nav">
                    <div class="btn btn-primary prev">
                        <i class="fas fa-caret-left"></i>
                    </div>
                    <div class="btn btn-primary next">
                        <i class="fas fa-caret-right"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="owl-carousel carousel-1">
            @foreach (var post in Model)
            {
                <article class="article">
                    <div class="item mr-3">
                        <div class="card">
                            <img src="~/Materials/images/news/@post.PostImage" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <a href="/@post.Category.CategoryName/@post.PostSeoTitle">@post.PostTitle</a>
                                </h5>
                                <div class="details">
                                    <span class="badge badge-primary category">@post.Category.CategoryName</span>
                                    <span class="post-wiev">
                                        <a href=""> <i class="fas fa-eye"></i>@post.PostView 	</a>
                                    </span>
                                    <span class="time"><a><i class="fas fa-calendar-alt"></i> @post.PostCreatedTime.ToString("dd/mm/yyyy")</a></span>
                                </div>

                                <p class="card-text">
                                    @if (post.PostSummary != null)
                                    {
                                        if (post.PostSummary.Length > 70)
                                        {
                                            @post.PostSummary.Substring(0, 69)

                                            <span>...</span>
                                        }
                                        else
                                        {
                                            @post.PostSummary
                                        }
                                    }
                                </p>
                                <a href="/@post.Category.CategoryName/@post.PostSeoTitle" class="btn btn-primary float-left">
                                    Oku
                                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-right" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                        <path fill-rule="evenodd" d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z" />
                                    </svg>
                                </a>

                            </div>
                        </div>
                    </div>
                </article>
            }

        </div>
    </div>
</section>